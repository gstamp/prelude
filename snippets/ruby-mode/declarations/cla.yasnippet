class ${1:`(let ((fn (capitalize (file-name-nondirectory
                                 (file-name-sans-extension
                                   (buffer-file-name))))))
             (if (string-match "_" fn)
                 (replace-match "" nil nil fn)
                fn))`}
  $0
end